body {
    font-family:sans-serif;
    margin: 0;
}
.Barra{
    width: 100%;
    height: 60px;
    background-color: rgb(226, 225, 226);
    margin: 0;
    border-radius: 10px;

}
.boton_barra{
    background-color: transparent;
    margin: 0;
    margin: 20px;
    border: 1px solid #000;
    border-radius: 10px;

}
h1 {
    text-align: center;
    color: #000;
    margin: auto;
    margin: 50px;
}
.search-bar{
    text-align: center;
    margin: 0;
    margin-bottom: 20px;
    margin-top: 20px;
}
input{
    width: 250px;
    border-radius: 40px;
}
table {
    width: 90%;
    border-collapse: collapse;
    margin: 0;
    margin: auto;
    margin-bottom: 20px;
    
    
}
table, th, td {
    border:2px solid #ddd;
}

th, td {
    padding: 12px;
    text-align: left;
}
th {
    background-color: #f4f4f4;
}
tr:nth-child(even) {
    background-color: #f9f9f9;
}
.action-buttons button {
    padding: 5px 10px;
    margin-right: 5px;
    cursor: pointer;
}
button.validate {
    background-color: #4CAF50;
    color: white;
    margin: 10px;
}
button.edit {
    background-color: #2196F3;
    color: white;
    margin: 10px;
}